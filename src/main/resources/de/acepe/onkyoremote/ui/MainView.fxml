<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.acepe.onkyoremote.ui.MainViewController">
   <content>
        <BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="content-pane">
         <top>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <HBox>
                     <children>
                        <Label maxWidth="1.7976931348623157E308" styleClass="settings-title" text="Onkyo Remote" HBox.hgrow="ALWAYS" />
                              <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#onSettingsPerformed" text="X">
                                  <styleClass>
                                      <String fx:value="settings-button" />
                                      <String fx:value="image-button" />
                                  </styleClass>
                              </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </top>
         <center>
            <ComboBox fx:id="sourceComboBox" prefWidth="150.0" BorderPane.alignment="CENTER" />
         </center>
        </BorderPane>
   </content>
</ScrollPane>
