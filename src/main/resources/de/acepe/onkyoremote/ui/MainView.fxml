<ScrollPane fitToHeight="true" fitToWidth="true" prefWidth="680.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.acepe.onkyoremote.ui.MainViewController">
   <content>
        <BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="content-pane">
         <top>
            <VBox styleClass="spaced" BorderPane.alignment="CENTER">
               <children>
                  <HBox>
                     <children>
                        <Label maxWidth="1.7976931348623157E308" styleClass="title" text="Onkyo Remote" HBox.hgrow="ALWAYS" />
                              <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#onSettingsPerformed" text="X">
                                  <styleClass>
                                      <String fx:value="settings-button" />
                                      <String fx:value="image-button" />
                                  </styleClass>
                              </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </top>
         <center>
            <VBox styleClass="spaced" BorderPane.alignment="CENTER">
               <children>
                  <GridPane minHeight="-Infinity" minWidth="-Infinity" styleClass="grid">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" />
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="Main" GridPane.rowIndex="1" />
                        <Label text="Center" GridPane.rowIndex="2" />
                        <Label text="Sub" GridPane.rowIndex="3" />
                        <Button fx:id="muteButton" minWidth="40.0" mnemonicParsing="false" onAction="#onMutePerformed" text="Mute" GridPane.columnIndex="1" GridPane.rowIndex="1">
                           <styleClass>
                              <String fx:value="image-button" />
                              <String fx:value="volume-button" />
                           </styleClass></Button>
                        <StackPane GridPane.columnIndex="2" GridPane.rowIndex="1">
                           <children>
                              <ProgressBar fx:id="sliderProgress" maxWidth="1.7976931348623157E308" progress="0.0" />
                              <Slider fx:id="volumeSlider" blockIncrement="5.0" majorTickUnit="10.0" maxWidth="1.7976931348623157E308" styleClass="progress-slider" />
                           </children>
                        </StackPane>
                        <Label fx:id="volumeLabel" alignment="CENTER" minWidth="40.0" text="-" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                        <StackPane GridPane.columnIndex="2" GridPane.rowIndex="2">
                           <children>
                              <Slider fx:id="volumeSliderCenter" blockIncrement="1.0" majorTickUnit="2.0" max="12.0" maxWidth="1.7976931348623157E308" min="-12.0" minorTickCount="1" showTickLabels="true" showTickMarks="true" snapToTicks="true" styleClass="offset-slider" />
                           </children>
                        </StackPane>
                        <Label fx:id="volumeLabelCenter" alignment="CENTER" minWidth="40.0" text="-" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                        <Slider fx:id="volumeSliderSub" blockIncrement="1.0" majorTickUnit="2.0" max="12.0" maxWidth="1.7976931348623157E308" min="-12.0" minorTickCount="1" showTickLabels="true" showTickMarks="true" snapToTicks="true" styleClass="offset-slider" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                        <Label fx:id="volumeLabelSub" alignment="CENTER" minWidth="40.0" text="-" GridPane.columnIndex="3" GridPane.rowIndex="3" />
                        <Label prefHeight="0.0" prefWidth="45.0" text="Source" />
                        <HBox GridPane.columnIndex="2">
                           <children>
                              <ComboBox fx:id="sourceComboBox" prefWidth="150.0" />
                           </children>
                        </HBox>
                        <Label text="Listening Mode" GridPane.columnSpan="2" GridPane.rowIndex="4" />
                        <Label fx:id="listeningModeLabel" styleClass="info-label" text="..." GridPane.columnIndex="2" GridPane.rowIndex="4" />
                        <HBox minWidth="-Infinity" styleClass="small-spaced" GridPane.columnIndex="2" GridPane.rowIndex="5">
                           <children>
                              <Button mnemonicParsing="false" onAction="#onFullMonoPerformed" text="Full Mono" />
                              <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#onDirectPerformed" text="Direct" />
                              <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#onPureAudioPerformed" text="Pure Audio" />
                              <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#onStereoPerformed" text="Stereo" />
                              <Button mnemonicParsing="false" onAction="#onAllChannelStereoPerformed" text="All Ch Stereo" />
                              <Button mnemonicParsing="false" onAction="#onMultiChannelPerformed" text="Multichannel" />
                           </children>
                        </HBox>
                        <Label text="Music" GridPane.rowIndex="5" />
                        <Label text="THX" GridPane.rowIndex="6" />
                        <HBox minWidth="-Infinity" styleClass="small-spaced" GridPane.columnIndex="2" GridPane.rowIndex="6">
                           <children>
                              <Button mnemonicParsing="false" onAction="#onThxMusicPerformed" text="THX Music" />
                              <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#onThxGamesPerformed" text="THX Games" />
                              <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#onThxCinemaPerformed" text="THX Cinema" />
                           </children>
                        </HBox>
                        <Label text="Special" GridPane.rowIndex="7" />
                        <HBox minWidth="-Infinity" styleClass="small-spaced" GridPane.columnIndex="2" GridPane.rowIndex="7">
                           <children>
                              <Button mnemonicParsing="false" onAction="#onTvLogicPerformed" text="TV Logic" />
                              <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#onTheaterDimensionalPerformed" text="Theater-Dimensional" />
                              <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#onGameSportsPerformed" text="Game-Sports" />
                              <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#onGameRockPerformed" text="Game-Rock" />
                           </children>
                        </HBox>
                     </children>
                  </GridPane>
               </children>
            </VBox>
         </center>
        </BorderPane>
   </content>
</ScrollPane>
